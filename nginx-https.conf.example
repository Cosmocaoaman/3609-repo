# ============================================
# Nginx Configuration for Jacaranda Talk (HTTPS)
# ============================================
# 这个文件是 HTTPS 配置示例
# 配置 SSL 证书后，使用此配置替换 /etc/nginx/nginx.conf 或
# 创建符号链接到 /etc/nginx/sites-enabled/
# ============================================

# HTTP 服务器块（重定向到 HTTPS）
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    # 服务器名称（EC2 DNS 和 IP）
    server_name ec2-52-203-191-137.compute-1.amazonaws.com 52.203.191.137;
    
    # 将所有 HTTP 请求重定向到 HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS 服务器块
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    
    # 服务器名称（EC2 DNS 和 IP）
    server_name ec2-52-203-191-137.compute-1.amazonaws.com 52.203.191.137;
    
    # SSL 证书配置
    # 自签名证书路径（默认，老师允许使用自签名证书）
    ssl_certificate /etc/nginx/ssl/certificate.crt;
    ssl_certificate_key /etc/nginx/ssl/private.key;
    
    # 如果使用 Let's Encrypt，取消下面的注释并注释掉上面的自签名证书路径
    # ssl_certificate /etc/letsencrypt/live/ec2-174-129-134-38.compute-1.amazonaws.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/ec2-174-129-134-38.compute-1.amazonaws.com/privkey.pem;
    
    # 如果使用 ZeroSSL，取消下面的注释并注释掉上面的路径
    # ssl_certificate /etc/nginx/ssl/certificate.crt;
    # ssl_certificate_key /etc/nginx/ssl/private.key;
    
    # SSL 配置（安全最佳实践）
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;
    
    # OCSP Stapling（提高 SSL 性能）
    # 注意：自签名证书不支持 OCSP Stapling，需要注释掉以下配置
    # ssl_stapling on;
    # ssl_stapling_verify on;
    # ssl_trusted_certificate /etc/letsencrypt/live/ec2-174-129-134-38.compute-1.amazonaws.com/chain.pem;
    # resolver 8.8.8.8 8.8.4.4 valid=300s;
    # resolver_timeout 5s;
    
    # 如果使用 Let's Encrypt 证书，取消上面的注释
    
    # 项目根目录
    root /home/ubuntu/Fri-13-16-01;
    
    # 客户端最大上传大小
    client_max_body_size 20M;

    # ============================================
    # 1. API请求转发到uWSGI（Django后端）
    # ============================================
    location /api/ {
        include uwsgi_params;
        uwsgi_pass 127.0.0.1:8000;

        # 添加CORS头（如果需要）
        add_header 'Access-Control-Allow-Origin' '$http_origin' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Accept,Authorization,Cache-Control,Content-Type,DNT,If-Modified-Since,Keep-Alive,Origin,User-Agent,X-Requested-With' always;

        if ($request_method = 'OPTIONS') {
            return 204;
        }
    }

    # ============================================
    # 2. Django静态文件（CSS, JS, images等）
    # ============================================
    location /static/ {
        alias /home/ubuntu/Fri-13-16-01/staticfiles/;
        expires 30d;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # ============================================
    # 3. 前端React应用（所有其他请求）
    # ============================================
    location / {
        root /home/ubuntu/Fri-13-16-01/frontend/dist;
        try_files $uri $uri/ /index.html;
        index index.html;
    }

    # ============================================
    # 4. 静态资源缓存优化（JS, CSS, 图片等）
    # ============================================
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        root /home/ubuntu/Fri-13-16-01/frontend/dist;
        expires 30d;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # ============================================
    # 5. 错误页面
    # ============================================
    error_page 404 /404.html;
    location = /404.html {
        root /home/ubuntu/Fri-13-16-01/frontend/dist;
    }

    # ============================================
    # 6. 安全：禁止访问敏感文件
    # ============================================
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ \.(py|pyc|sqlite3|env|pem|key)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # ============================================
    # 7. 安全头（Security Headers）
    # ============================================
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
}


